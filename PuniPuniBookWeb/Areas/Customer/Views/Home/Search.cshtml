@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-1">
        <div class="col-6">
            <h4 class="text-info font-weight-bold">Search Results</h4>
        </div>
    </div>
    @if (Model.Count() != 0)
    {
        <table id="tblData" class="table table-bordered table-striped table table-head-fixed text-nowrap" style="width:100%">
            <thead>
                <tr>
                    <th style="text-align: center; vertical-align: middle;">Picture</th>
                    <th style="text-align: center; vertical-align: middle;">Title</th>
                    <th style="text-align: center; vertical-align: middle;">ISBN</th>
                    <th style="text-align: center; vertical-align: middle;">Price</th>
                    <th style="text-align: center; vertical-align: middle;">Author</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center; vertical-align: middle;">
                        <img src="@item.ImageUrl" alt="ProductImg" style="max-height:60px;max-width:60px">
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @item.Title
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @item.ISBN
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @item.Price
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @item.Author
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        <a asp-controller="Home" asp-action="Details" form-control" asp-route-productId="@item.Id">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
            
        </tbody>
        </table>
    }
    else
    {
        <h2> Sorry we couldn't find any result.</h2>
    }
</div>
