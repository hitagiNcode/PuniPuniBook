<div class="row mt-3">
    <div class="heading_container heading_center">
        <h2>
            Top Sellers
        </h2>
    </div>
    @foreach (var product in Model)
    {
        <div class="col-lg-2 col-md-6">
            <div class="row p-2">
                <div class="m-2 col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="max-height:300px;max-width:200px;width: expression(this.width > 500 ? 500: true);" />

                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-info">@product.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                            </div>
                            <div class="">
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

